# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*.{js,html,css,json}]
charset = utf-8

[*.html]
indent_style = tab
indent_size = 2

[*.{js,css}]
indent_style = space
indent_size = 2

[{package.json}]
indent_style = space
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
